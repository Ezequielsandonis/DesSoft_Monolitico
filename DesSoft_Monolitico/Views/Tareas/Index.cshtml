@model IEnumerable<DesSoft_Monolitico.Models.Tarea>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLimite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLimite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.TareaId">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.TareaId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.TareaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
